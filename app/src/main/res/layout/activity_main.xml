<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="431dp"
        android:layout_height="153dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:autoSizeTextType="uniform"
        android:elegantTextHeight="true"
        android:freezesText="false"
        android:text="J'suis la "
        android:textAlignment="center"
        android:textColor="#0B0708"
        android:textColorHighlight="#E91E63"
        android:textIsSelectable="false"
        android:fontFamily="@font/sheldon"/>


    <ImageButton
        android:id="@+id/button_New_Message"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/text_home"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="121dp"
        android:background="@drawable/logo_new_message"
        android:onClick="NewMessage"
        android:layout_centerHorizontal="true" />


</RelativeLayout>